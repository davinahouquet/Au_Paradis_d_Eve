{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <section class="parallax-home">
        <h1>Au Paradis d'Eve</h1>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_edit_home_text') }}">Modifier la page d'accueil</a>
        {% endif %}

        <p><strong>{{ data.maison_dhote }}</p>
        <p><a href="{{ path('app_reservation') }}">Réservez</a> sur notre site en toute sécurité</p>
        <p>{{ data.environnement }}</p>
    </section>
    <section class="apercu-chambres">
        <img src="" alt="">

        <a href="">Réservez votre séjour</a>

        {% for chambre in chambres %}
            <a href="{{path('show_espace', {'id' :chambre.id})}}">{{chambre.nomEspace}}</a>
            {{chambre.prix}}€
            <p>Disponible à partir du</p>
            <a href="">Réserver</a>
        {% endfor %}
    </section>
    <section class="pdb">
        <h2>{{ data.pays_de_bitche }}</h2>
        <p>{{ data.description_pays_de_bitche | raw }}</p>
        <img src="" alt="L'Altschlossfelsen, nom à consonance germanique signifie :Rocher du Vieux Château.  Barre rocheuse aux couleurs rougeâtres qui porte toutes les particularités géologiques des Vosges du Nord.">
    </section>
    <section class="mascotte">
        <h3>{{ data.mascotte }}</h3>
        <img src="" alt="Chat noir et blanc">
        <p>{{ data.description_mascotte | raw }}</p>
    </section>
    <section class="contact" id="contact">
        <h4>Contactez-nous...</h4>
        <div class="infos-contact">
            <h5>Pour contacter Eve...</h5>
            <p>{{ data.telephone_fixe }}</p>
            <p>{{ data.telephone }}</p>
            <p>{{ data.adresse }}</p>
            <p>{{ data.cp }}{{ data.ville }}</p>
            <p>{{ data.email }}</p>
        </div>
        <div class="form-contact">
            {{ form_start(form) }}

            {{ form_row(form.email) }}
            {{ form_row(form.message) }}
            {{ form_row(form.valider)}}

            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
