{% extends 'base.html.twig' %}
{% block meta_description %} Liste des options - Administration {% endblock %}
{% block css %}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
    <link rel="stylesheet" href="{{ asset('css/base.css') }}">
{% endblock %}

{% block body %}
    <section class="profil">
        <h1>Les options</h1>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Description</th>
                    <th scope="col">Tarif</th>
                    <th scope="col" colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for option in options %}
                    <tr>
                        <th scope="row">{{ option.id }}</th>
                        <td>{{ option.nom }}</td>
                        <td>{{ option.description }}</td>
                        <td>{{ option.tarif }}</td>
                        <td><a href="{{ path('edit_option', {'id' : option.id}) }}">Modifier</a></td>
                        <td><a href="{{ path('remove_option', {'id' : option.id}) }}">Supprimer</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        


        <a href="{{ path('new_option') }}">Ajouter une option</a>
    </section>
{% endblock %}
